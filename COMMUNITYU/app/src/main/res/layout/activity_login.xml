<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.test.zhikangzhou.activity.LoginActivity"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/blue_semi_transparent_pressed">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:layout_marginTop="-50dp"
        android:layout_marginBottom="80dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="CIRCLE"
            android:elevation="2dp"
            android:textColor="#ffffff"
            android:textSize="58dp"
            android:id="@+id/textView" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <EditText
            android:layout_width="224dp"
            android:layout_height="36dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/account"
            android:layout_weight="1"
            android:hint="  请输入用户名"
            android:textColor="#8c8c8c"
            android:background="#ffffffff"
            android:elevation="2dp"
            android:paddingLeft="10dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp">

        <EditText
            android:layout_width="224dp"
            android:layout_height="36dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/passsword"
            android:hint=" 输入密码"
            android:layout_weight="1"
            android:background="#ffffffff"
            android:textColor="#8c8c8c"
            android:elevation="2dp"
            android:paddingLeft="10dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="224dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="记住密码"
            android:id="@+id/cb_login"
            android:checked="true"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center">

        <Button
            android:layout_width="224dp"
            android:layout_height="30dp"
            android:text="登录"
            android:textColor="@color/white"
            android:id="@+id/loginButton"
            android:layout_gravity="center_horizontal"
            android:elevation="2dp"
            android:background="@color/blue_semi_transparent" />

    </LinearLayout>

</LinearLayout>
