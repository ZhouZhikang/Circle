<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.test.zhikangzhou.activity.AddActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:background="#ffffff"
        android:elevation="4dp"
        android:id="@+id/linearLayout"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp">
        <EditText
            android:id="@+id/circle_setTitle"
            android:layout_weight="4"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="20dp"
            android:textColor="#8c8c8c"
            android:textSize="17sp"
            android:maxLines="10"
            android:singleLine="false"
            android:inputType="textMultiLine"
            android:hint="圈子名称"
            android:textColorHint="#8c8c8c"
            android:background="@null"
            android:gravity="center_vertical"
            android:layout_marginRight="20dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/circle_content"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="330dp"
        android:layout_below="@+id/linearLayout"
        android:background="#ffffff"
        android:elevation="4dp"
        android:layout_marginTop="1dp"
        android:paddingTop="10dp"
        android:paddingRight="20dp"
        android:paddingBottom="20dp"
        android:paddingLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp">

        <EditText
            android:id="@+id/circle_setContent"
            android:layout_width="fill_parent"
            android:layout_height="320dp"
            android:background="#ffffff"
            android:singleLine="false"
            android:enabled="true"
            android:gravity="top"
            android:hint="简介"
            android:inputType="textMultiLine"
            android:maxLines="10"
            android:textColor="#8c8c8c"
            android:minLines="8"
            android:scrollbars="vertical">

        </EditText>



    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="创建圈子"
        android:id="@+id/btn_add_circle"
        android:layout_below="@+id/circle_content"
        android:layout_alignStart="@+id/activity_content"
        android:layout_marginRight="20dp"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/blue_semi_transparent"
        android:layout_marginLeft="20dp" />

</RelativeLayout>
