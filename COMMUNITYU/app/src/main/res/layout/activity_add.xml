<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.test.zhikangzhou.activity.AddActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:background="#ffffff"
        android:elevation="4dp"
        android:id="@+id/linearLayout"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp">
        <EditText
            android:id="@+id/activity_setTitle"
            android:layout_weight="4"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="20dp"
            android:textColor="#8c8c8c"
            android:textSize="17sp"
            android:maxLines="10"
            android:singleLine="false"
            android:inputType="textMultiLine"
            android:hint="标题"
            android:textColorHint="#8c8c8c"
            android:background="@null"
            android:gravity="center_vertical"
            android:layout_marginRight="20dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/activity_content"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="330dp"
        android:layout_below="@+id/linearLayout"
        android:background="#ffffff"
        android:elevation="4dp"
        android:layout_marginTop="1dp"
        android:paddingTop="10dp"
        android:paddingRight="20dp"
        android:paddingBottom="20dp"
        android:paddingLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp">

        <EditText
            android:id="@+id/add_content"
            android:layout_width="fill_parent"
            android:layout_height="320dp"
            android:background="#ffffff"
            android:singleLine="false"
            android:enabled="true"
            android:gravity="top"
            android:hint="内容"
            android:inputType="textMultiLine"
            android:maxLines="10"
            android:textColor="#8c8c8c"
            android:minLines="8"
            android:scrollbars="vertical">

        </EditText>



    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/activity_content"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="false"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="1dp"
        android:background="#ffffff"
        android:elevation="4dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp">

            <TextView
                android:id = "@+id/TextView_circle"
                android:layout_width = "wrap_content"
                android:layout_height = "wrap_content"
                android:text = ""
                android:layout_gravity="center_vertical" />

            <Spinner
                android:id = "@+id/Spinner_circle"
                android:layout_width = "30dp"
                android:layout_height ="wrap_content"
                android:layout_gravity="center_vertical">
            </Spinner >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:layout_marginLeft="20dp">

                <TextView
                    android:id="@+id/time1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="时间1"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/time2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="时间2"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/time3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="时间3"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="center" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <com.getbase.floatingactionbutton.FloatingActionButton
        android:id="@+id/confirm_add"
        fab:fab_icon="@drawable/plus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="8dp"
        fab:fab_colorNormal="@color/blue_semi_transparent"
        fab:fab_colorPressed="@color/blue_semi_transparent_pressed"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="22dp"
        android:layout_marginBottom="20dp" />

</RelativeLayout>
